                            </configOptions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-files-spec</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/spec/files-specification.yaml</inputSpec>
                            <language>spring</language>
                            <library>spring-mvc</library>
                            <generateApiTests>false</generateApiTests>
                            <modelNameSuffix>Dto</modelNameSuffix>
                            <configOptions>
                                <useTags>true</useTags>
                                <interfaceOnly>true</interfaceOnly>
                                <dateLibrary>java17</dateLibrary>
                                <apiPackage>${base.generated.path}.files.specification.api</apiPackage>
                                <modelPackage>${base.generated.path}.specification.models</modelPackage>
                                <output>${project.build.directory}</output>
                                <apis/>
                                <models/>
                                <useMultipartFeature>true</useMultipartFeature>
                            </configOptions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-recruitment-spec</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/spec/recruitment-specification.yaml</inputSpec>
                            <language>spring</language>
                            <library>spring-mvc</library>
                            <generateApiTests>false</generateApiTests>
                            <modelNameSuffix>Dto</modelNameSuffix>
                            <configOptions>
                                <useTags>true</useTags>
                                <interfaceOnly>true</interfaceOnly>
                                <dateLibrary>java17</dateLibrary>
                                <apiPackage>${base.generated.path}.recruitment.specification.api</apiPackage>
                                <modelPackage>${base.generated.path}.specification.models</modelPackage>
                                <output>${project.build.directory}</output>
                                <apis/>

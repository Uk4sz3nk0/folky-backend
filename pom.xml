                            <configOptions>
                                <useTags>true</useTags>
                                <interfaceOnly>true</interfaceOnly>
                                <dateLibrary>java17</dateLibrary>
                                <apiPackage>${base.generated.path}.music-instrument.specification.api</apiPackage>
                                <modelPackage>${base.generated.path}.specification.models</modelPackage>
                                <output>${project.build.directory}</output>
                                <apis/>
